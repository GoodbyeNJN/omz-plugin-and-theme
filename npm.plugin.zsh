# Aliases
alias n="npm"

# Dependencies
alias na="npm add"
alias nad="npm add --save-dev"
alias nap="npm add --save-peer"
alias nls="npm list"
alias nrm="npm remove"
alias nu="npm update"

# Global dependencies
alias nga="npm add -g"
alias ngls="npm list -g"
alias ngrm="npm remove -g"
alias ngu="npm update -g"

# Misc
alias ni="npm init"
alias nin="npm install"
alias nc='npm create'

# Run scripts
alias nr='npm run'
alias nrun="npm run"
alias nst="npm run start"
alias nsv="npm run serve"
alias nd="npm run dev"
alias nb="npm run build"
alias nln="npm run lint"
alias nt='npm test'
alias ntc="npm test --coverage"
